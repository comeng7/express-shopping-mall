{
  "name": "express-shopping-mall",
  "version": "1.0.0",
  "description": "Shopping mall API server",
  "main": "src/app.ts",
  "private": true,
  "scripts": {
    "start:local": "NODE_ENV=development ts-node -r tsconfig-paths/register src/app.ts dotenv_config_path=.env.local",
    "start:prod": "NODE_ENV=production ts-node -r tsconfig-paths/register src/app.ts dotenv_config_path=.env.prod",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf node_modules && rm -rf package-lock.json && npm cache clean --force && npm install"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mysql2": "^3.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
